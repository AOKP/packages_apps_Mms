<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:paddingTop="1dip"
    android:paddingBottom="1dip"
    android:paddingLeft="9dip"
    android:paddingRight="9dip">

    <TextView android:id="@+id/text_entry_type"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="5dip"
        android:textColor="@color/message_sent"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center" />

    <TextView android:id="@+id/text_entry_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/text_hairline"
        android:gravity="left|center_vertical|clip_horizontal"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_gravity="center_vertical" />
</LinearLayout>

